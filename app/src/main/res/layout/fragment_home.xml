<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="80dp"
    >

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <TableRow
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:weightSum="1"
          android:layout_weight="0.5">
         <RelativeLayout
             android:id="@+id/fireBtn"
             android:clickable="true"
             android:background="@drawable/ripple"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_margin="5dp"
             android:layout_weight="0.5">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button1"
                android:text="Fire"
                android:clickable="false"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:gravity="center|bottom"
                android:singleLine="false"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/image1"
                />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_fire" />
         </RelativeLayout>
         <RelativeLayout
             android:id="@+id/earthquakeBtn"
             android:clickable="true"
             android:background="@drawable/ripple"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_margin="5dp"
             android:layout_weight="0.5">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:text="Earthquake"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:gravity="center|bottom"
                android:singleLine="false"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/image2"
                />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_earth" />
         </RelativeLayout>
      </TableRow>

      <TableRow
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:weightSum="1"
          android:layout_weight="0.5">
         <RelativeLayout
             android:id="@+id/typhoonBtn"
             android:clickable="true"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.5"
             android:background="@drawable/ripple"
             android:layout_margin="5dp"
             >


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button3"

                android:text="TYPHOON"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                android:gravity="center|bottom"
                android:singleLine="false"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/image3" />


            <ImageView
                android:id="@+id/image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_typhoon" />


         </RelativeLayout>
         <RelativeLayout
             android:id="@+id/robberyBtn"
             android:clickable="true"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.5"
             android:background="@drawable/ripple"
             android:layout_margin="5dp"
             >


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                android:backgroundTint="@color/white"
                android:text="ROBBERY"
                android:textSize="14sp"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:layout_below="@+id/image4"

                />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_rubbery" />




         </RelativeLayout>
      </TableRow>

      <TableRow
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:weightSum="1"
          android:layout_weight="0.5">
         <RelativeLayout
             android:id="@+id/injuriesBtn"
             android:clickable="true"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.5"
             android:background="@drawable/ripple"
             android:layout_margin="5dp"
             >


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button5"
                android:backgroundTint="@color/white"
                android:text="INJURIES"
                android:singleLine="false"
                android:textSize="14sp"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/image5"

                />


            <ImageView

                android:id="@+id/image5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_medical" />


         </RelativeLayout>
         <RelativeLayout
             android:id="@+id/othersBtn"
             android:clickable="true"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.5"
             android:background="@drawable/ripple"
             android:layout_margin="5dp"
             >


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button6"
                android:backgroundTint="@color/white"
                android:text="OTHERS"
                android:textSize="14sp"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/image6"
                />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_others" />
         </RelativeLayout>
      </TableRow>

   </TableLayout>

</LinearLayout>